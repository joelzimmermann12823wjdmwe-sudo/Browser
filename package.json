{
  "name": "neon-gx",
  "version": "1.2.3",
  "description": "NEON GX | Hyper-Performance Browser",
  "main": "App/src/main.js",
  "author": "Joel Zimmermann",
  "repository": {
    "type": "git",
    "url": "https://github.com/joelzimmermann12823wjdmwe-sudo/Browser"
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "build": {
    "appId": "com.neon.gx",
    "productName": "NEON GX",
    "publish": [
      {
        "provider": "github",
        "owner": "joelzimmermann12823wjdmwe-sudo",
        "repo": "Browser"
      }
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "App/ui/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "NEON GX",
      "artifactName": "NEON.GX.Setup.${version}.${ext}",
      "deleteAppDataOnUninstall": true
    }
  },
  "dependencies": {
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "g4f": "^1.4.6"
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3"
  }
}
