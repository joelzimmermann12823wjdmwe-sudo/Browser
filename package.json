{
  "name": "neon-gx",
  "version": "1.2.3",
  "description": "NEON GX - Next Gen Browser",
  "main": "App/src/main.js",
  "author": "Joel Zimmermann",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win --publish never",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1",
    "rimraf": "^5.0.5"
  },
  "build": {
    "appId": "com.neon.gx",
    "productName": "Neon GX",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "joelzimmermann12823wjdmwe-sudo",
        "repo": "Browser"
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": null,
      "publish": [
        "github"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "artifactName": "NEON_GX_Setup_${version}.exe"
    }
  }
}