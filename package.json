{
  "name": "neon-gx",
  "version": "1.1.2",
  "description": "NEON GX - Next Gen Browser",
  "main": "App/src/main.js",
  "author": "Joel Zimmermann",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "electron-log": "^5.0.0",
    "electron-updater": "^6.1.7"
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.9.1",
    "rimraf": "^5.0.5"
  },
  "build": {
    "appId": "com.neon.gx",
    "productName": "Neon GX",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": null
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "artifactName": "NEON_GX_Setup_${version}.exe"
    }
  }
}