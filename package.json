{
  "name": "neon-gx",
  "version": "1.2.1",
  "description": "NEON GX | Hyper-Performance Browser",
  "main": "App/src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win"
  },
  "build": {
    "appId": "com.neon.gx",
    "productName": "NEON GX",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "App/ui/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "App/ui/icon.ico",
      "uninstallerIcon": "App/ui/icon.ico",
      "license": "App/ui/license.txt"
    }
  },
  "devDependencies": {
    "electron": "^25.0.0",
    "electron-builder": "^24.13.3"
  }
}